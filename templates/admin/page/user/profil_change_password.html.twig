{% extends '@EasyAdmin/layout.html.twig' %}

{% block main %}
    <div>

        <div class="container-fluid">
            <div class="row">
                <div class="col-12 col-lg-6">
                    {{ "user.nom"|trans }}:
                </div>
                <div class="col-12 col-lg-6">
                    {{ user.nom }}
                </div>

                <div class="col-12 col-lg-6">
                    {{ "user.prenom"|trans }}:
                </div>
                <div class="col-12 col-lg-6">
                    {{ user.prenom }}
                </div>

                <div class="col-12 col-lg-6">
                    {{ "user.email"|trans }}:
                </div>
                <div class="col-12 col-lg-6">
                    {{ user.email }}
                </div>
            </div>
        </div>

        <hr/>

        <div class="content-panel p-3">
            {# Contenu #}
            {{ form(passwordForm) }}
        </div>

    </div>
{% endblock %}
